{% extends 'layout/pattern.twig' %}

{% block content %}
    <div class="main-grids">
        <div class="top-grids">
            <div class="recommended-info">
                <div class="col-xs-11 profile-description resent-grid-info recommended-grid-info">
                    <div class="media-left">
                        <img src="/images/tags/default.png" alt="Default profile picture" />
                    </div>
                    <div class="media-body">
                        <h3><a href="/tag/{{tag.id}}" class="title title-info">{{tag.name}}</a></h3>
                        <ul>
                            <li><p class="views views-info">{{tag.photos.count}} photos associées à ce tag</p></li>
                        </ul>
                    </div>  
                </div>
            </div>
            {% for post in posts %}
                {% include 'layout/statusDisplay.twig' %}
            {% endfor %}
            <div class="clearfix"> </div>
        </div>
    </div>
{% endblock %}