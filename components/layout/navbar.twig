                                <input type="text" name="firstName" class="email" placeholder="Prénom" title="Prénom" />
                                <input type="text" name="lastName" class="email" placeholder="Nom" title="Nom" />
                                <input type="password" name="password" class="password" placeholder="Mot de passe" title="Mot de passe" required="required" pattern=".{6,}" title="Minimum 6 characters required" />
                                <input type="password" name="passwordVerification" class="password" placeholder="Mot de passe (vérification)" title="Mot de passe (vérification)" required="required" pattern=".{6,}" title="Minimum 6 characters required" />
