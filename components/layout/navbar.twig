						<div class="signup">
							<form  method="post" action="/login">
								<input type="text" name="email" class="email" placeholder="Adresse mail" required="required" autofocus pattern="([\w-\.]+@([\w-]+\.)+[\w-]{2,4})?"/>
								<input type="password" name="password" placeholder="Mot de passe" required="required" pattern=".{6,}" title="Minimum 6 characters required" autocomplete="off" />
								<input type="submit"  value="Connexion"/>
							</form>
						</div>
